<Window x:Class="ShoeShop.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeShop.Desktop"
        xmlns:library="clr-namespace:ShoeShop.Library.Models;assembly=ShoeShop.Library"
        mc:Ignorable="d"
        MinHeight="700"
        MinWidth="850"
        Icon="images/Icon.ico">
    
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Image Source="images/Icon.ico" Height="30"/>
            <TextBlock x:Name="PageTitleTextBlock" FontSize="30" Margin="20 0 0 0"/>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Navigated="MainFrame_OnNavigated"/>
    </DockPanel>
</Window>
