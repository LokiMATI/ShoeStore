<Page x:Class="ShoeShop.Desktop.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ShoeShop.Desktop.Pages"
      mc:Ignorable="d"
      Title="AuthPage" MinHeight="700" MinWidth="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Логин(Email)"/>
        <TextBox x:Name="LoginTextBox" Width="200" Margin="20 5 20 5"/>
        
        <Label Content="Пароль"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Margin="20 5 20 5"/>
        
        <Button Content="Войти" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="ButtonBase_OnClick"/>
    </StackPanel>
</Page>
