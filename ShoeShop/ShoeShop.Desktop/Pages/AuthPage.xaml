<Page x:Class="ShoeShop.Desktop.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ShoeShop.Desktop.Pages"
      mc:Ignorable="d"
      Title="AuthPage"
      Background="#7FFF00">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="White">
        <Label Content="Логин" FontSize="30" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="LoginTextBox" Width="200" Margin="20 5 20 5" FontSize="20"/>
        
        <Label Content="Пароль" FontSize="30" HorizontalContentAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Margin="20 5 20 5" FontSize="20"/>
        
        <Button x:Name="LoginButton" Content="Войти"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Margin="20"
                FontSize="30"
                Click="ButtonBase_OnClick"/>
    </StackPanel>
</Page>
